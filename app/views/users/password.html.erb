Update Your Password

<%= form_for @user, url: {action: "reset_password"} do |f| %>
	<%= f.label "First Name" %><br/>
	<%= f.text_field :first_name, id: "first_name" %><br/>
	<%= f.label "Email" %><br/>
	<%= f.text_field :email, id: "email" %><br/>
	<%= f.label "New Password" %><br/>
	<%= f.password_field :password, id: "password" %><br/>
	<%= f.label "Confirm Password" %><br/>
	<%= f.password_field :confirm_password, id: "confirm_password" %><br/>
	<%= f.submit "Update Password" %>
<% end %>